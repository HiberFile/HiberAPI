{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "inlineSourceMap": true
  },
  "include": ["src/**/*.ts"],
  "target": "ES2018",
  "module": "ESNext",
  "moduleResolution": "Node"
}
